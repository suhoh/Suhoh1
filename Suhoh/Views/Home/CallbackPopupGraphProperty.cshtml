@using Suhoh.Model
@model ViewModel

@Html.DevExpress().CallbackPanel(
    cbSsettings =>
    {
        cbSsettings.Name = "callbackPopupGraphProperty";
        cbSsettings.CallbackRouteValues = new { Controller = "Home", Action = "CallbackPopupGraphProperty" };
        cbSsettings.ClientSideEvents.BeginCallback = "callbackPopupGraphProperty_OnBeginCallback";
        cbSsettings.ClientSideEvents.EndCallback = "callbackPopupGraphProperty_OnEndCallback";
        cbSsettings.SetContent(() =>
        {
            if (Model.ActiveProperty.ToUpper().Contains("PIE"))
                Html.RenderPartial("D3PieProperty", Model);
            if (Model.ActiveProperty.ToUpper().Contains("BAR"))
                Html.RenderPartial("D3BarProperty", Model);
        });
    }).GetHtml()
