@using Suhoh.Model
@model ViewModel

@{
    ViewBag.Title = "D3Graph";
}

<div id="@Model.CreatePanelName" style="position:relative;">
    <div id="@(String.Format("{0}|Title", Model.CreatePanelName))" class="chartTitle">
        @{ 
            var graphType = "";
            if (Model.CreatePanelName.ToUpper().Contains("PIE"))
            {
                graphType = "PIE";
            }
            if (Model.CreatePanelName.ToUpper().Contains("BAR"))
            {
                graphType = "BAR";
            }
        }
        <span>@graphType</span>
    </div> 

    <div class="divChartMaximizeButton">
        <button id="@(String.Format("{0}|Maximize", Model.CreatePanelName))" type="button" class="btnChartMaximize" title="Maximize"
                onclick="btnBarMaximizeClick(this)">
        </button>
    </div>

    <div class="divChartLegendButton">
        <button id="@(String.Format("{0}|Legend", Model.CreatePanelName))" type="button" class="btnChartLegend" title="Legend" 
                onclick="showHideLegend(this)">
        </button>
    </div>

    <div class="divChartPropertyButton">
        <button id="@(String.Format("{0}|Property", Model.CreatePanelName))" type="button" class="btnChartProperty" title="Property" 
                onclick="showPropertyPopup(this)">
        </button>
    </div>

    <div class="divChartSettingButton">
        <button id="@(String.Format("{0}|Close", Model.CreatePanelName))"  type="button" class="btnChartClose" title="Close"
                onclick="btnBarCloseClick(this)">
        </button>
    </div>
</div>

<script>
    var divGraph = @Model.CreatePanelName;
    var divId = divGraph.id;
    initGraph(divId);
</script>