@using Suhoh.Model
@model ViewModel

@{
    ViewBag.Title = "D3Graph";
}

<style>
    .divPieOutline {
    }
</style>

<div id="@(String.Format("{0}", Model.CreatePanelName))" style="position:relative;" onclick="divPanelClicked(this)">
    <div id="@(String.Format("{0}_Title", Model.CreatePanelName))" class="chartTitle">
        @{
            var graphType = "";
            if (Model.CreatePanelName.ToUpper().Contains("PIE"))
            {
                graphType = "PIE";
            }
            if (Model.CreatePanelName.ToUpper().Contains("BAR"))
            {
                graphType = "BAR";
            }
        }
        <span style="font-size: large">@graphType</span>
    </div>

    <div class="divChartMaximizeButton">
        <button id="@(String.Format("{0}_Maximize", Model.CreatePanelName))" type="button" class="btnChartMaximize" title="Maximize"
                onclick="btnBarMaximizeClick(this)"></button>
    </div>

    <div class="divChartLegendButton">
        <button id="@(String.Format("{0}_Legend", Model.CreatePanelName))" type="button" class="btnChartLegend" title="Legend"
                onclick="showHideLegend(this)"></button>
    </div>

    <div class="divChartPropertyButton">
        <button id="@(String.Format("{0}_Property", Model.CreatePanelName))" type="button" class="btnChartProperty" title="Property"
                onclick="showPropertyPopup(this)"></button>
    </div>

    <div class="divChartSettingButton">
        <button id="@(String.Format("{0}_Close", Model.CreatePanelName))" type="button" class="btnChartClose" title="Close"
                onclick="btnBarCloseClick(this)"></button>
    </div>
</div>

<script>
    var divGraph = @Model.CreatePanelName;
    var divId = divGraph.id;
    initGraph(divId);
</script>