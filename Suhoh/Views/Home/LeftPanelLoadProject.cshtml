@using Suhoh.Model
@model ViewModel

<div>
    <table>
        <tr>
            <th>
                @Html.DevExpress().RadioButtonListFor(model => model.RadioLeftPanelSaveLoad,
                    settings =>
                    {
                        settings.Name = "radioLeftPanelSaveLoad";
                        settings.Properties.RepeatDirection = System.Web.UI.WebControls.RepeatDirection.Horizontal;
                        settings.Properties.Items.Add("Save", 1);
                        settings.Properties.Items.Add("Load/Delete", 2);
                        settings.Width = 180;
                        settings.Height = 28;
                        settings.ControlStyle.CssClass = "radioLeftPanelSaveLoad";
                        settings.ControlStyle.Border.BorderStyle = System.Web.UI.WebControls.BorderStyle.None;
                        settings.Properties.ValueType = typeof(Int32);
                        settings.Properties.ClientSideEvents.SelectedIndexChanged = "radioLeftPanelSaveLoadClick";
                    }).GetHtml()
            </th>
        </tr>
    </table>
</div>

<div id="divLeftPanelSaveProject">
    <table>
        <tr>
            <th class="LeftPanelSaveLoadProjectTitle">Project Name</th>
        </tr>
        <tr style="margin-bottom: 10px">
            <th class="tbLeftPanelSaveProjectName">
                @Html.DevExpress().TextBox(
                             settings =>
                             {
                                 settings.Name = "tbLeftPanelSaveProjectName";
                                 settings.Width = 180;
                                 settings.Text = "";
                                 settings.ControlStyle.CssClass = "";
                                 settings.Properties.NullText = "Enter project name";
                                 settings.Properties.ClientSideEvents.KeyUp = "";
                             }
                             ).GetHtml()
            </th>
            <th class="btnLeftPanelSaveProjectName">
                @Html.DevExpress().Button(
               settings =>
               {
                   settings.Name = "btnLeftPanelSaveProjectName";
                   settings.Width = 30;
                   settings.Text = "Save";
                   settings.ClientSideEvents.Click = "btnLeftPanelSaveProjectNameClick";
               }
               ).GetHtml()
            </th>
        </tr>
    </table>
</div>

<div id="divLeftPanelLoadProject">
    <div>
        @Html.Action("LeftPanelProjectGridview", Model)
    </div>

    @Html.DevExpress().Button(
    settings =>
    {
        settings.Name = "btnLeftPanelDeleteProjectName";
        settings.Width = 25;
        settings.Text = "Delete";
        settings.ControlStyle.CssClass = "btnLeftPanelDeleteProjectName";
        settings.ClientSideEvents.Click = "btnLeftPanelSaveProjectNameClick";
    }
    ).GetHtml()
    @Html.DevExpress().Button(
    settings =>
    {
        settings.Name = "btnLeftPanelLoadProjectName";
        settings.Width = 25;
        settings.Text = "Load";
        settings.ControlStyle.CssClass = "btnLeftPanelLoadProjectName";
        settings.ClientSideEvents.Click = "btnLeftPanelSaveProjectNameClick";
    }
    ).GetHtml()
</div>
