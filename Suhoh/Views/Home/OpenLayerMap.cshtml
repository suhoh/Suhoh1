@using Suhoh.Model
@model ViewModel

@{
    ViewBag.Title = "OpenLayerMap";
}

<style>
    .olMap {
        opacity: 1;
        background-color: #ffffff;
        width: 100%;
        height: 100%;
        position: static;
        z-index: 1;
        /*position: fixed;
        top: 47px;
        bottom: 0px;
        left: 0px;
        z-index: 1;*/
    }
</style>

<head>
</head>
<body>    
    <div style="width: 100%; height: 100%; position: relative;">
        <div id="@Model.CreatePanelName" class="olMap">
        </div>

        <div class="divMapMaximizeButton">
            <button id="@(String.Format("{0}|Maximize", Model.CreatePanelName))" type="button" class="btnMapMaximize" title="Maximize" 
                    onclick="btnMapMaximizeClick()"></button>
        </div>

        <div class="divMapLegendButton">
            <button id="@(String.Format("{0}|Legend", Model.CreatePanelName))" type="button" class="btnMapLegend" title="Legend" 
                    onclick="btnMapLegendClick()"></button>
        </div>

        <div class="divMapPropertyButton">
            <button id="@(String.Format("{0}|Property", Model.CreatePanelName))" type="button" class="btnMapProperty" title="Property" 
                    onclick="btnMapPropertyClick()"></button>
        </div>

        <div class="divMapSettingButton">
            <button id="@(String.Format("{0}|Close", Model.CreatePanelName))" type="button" class="btnMapClose" title="Close" 
                    onclick="btnMapCloseClick()"></button>
        </div>
    </div>
</body>

@*<div class="loadExcel">
    <button type="button" class="loadExcelButton" title="Load Excel" onclick="loadExcelFile()"></button>
</div>*@

<script>

    var divMap = @Model.CreatePanelName;
    var divId = divMap.id;
    initMap(divId);
    if (_jsonData != null) {
        var map = getMap(divId);
        if (map != null)
            addPointLayer(_jsonData, map, 'Latitude', 'Longitude');
    }

</script>
